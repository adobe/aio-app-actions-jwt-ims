{
  "name": "@adobe/aio-app-actions-jwt-ims",
  "version": "1.0.0",
  "description": "",
  "main": "./src/auth.js",
  "scripts": {
    "posttest": "eslint src",
    "test": "npm run unit-tests",
    "unit-tests": "jest --ci",
    "remove_pkginfo": "replace '^require.*pkginfo' '// removed pkginfo ...' -r ${npm_package_name}-${npm_package_version}.js",
    "whisk_wrapper": "echo \"const main = require('main-action');\" >> ${npm_package_name}-${npm_package_version}.js"
  },
  "dependencies": {
    "@adobe/aio-lib-core-logging": "^1.0.0",
    "@adobe/jwt-auth": "^0.3.1"
  },
  "devDependencies": {
    "eslint": "^8.31.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29",
    "jest-junit": "^5.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "<rootDir>/tests/fixtures/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/tests/fixtures/"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["./jest.setup.js"],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "lines": 100,
        "statements": 100,
        "functions": 100
      }
    }
  }
}
